<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/isi150dp"
    android:padding="@dimen/isi15dp"
    android:orientation="vertical">

   <LinearLayout

       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:padding="@dimen/isi10dp">
    <ImageView
        android:id="@+id/imgPoster"
        android:layout_gravity="center"
        android:layout_width="@dimen/isi100dp"
        android:layout_height="@dimen/isi100dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/txtJudul"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/judul"
        android:textColor="@color/hitamm"
        android:textSize="@dimen/isi20dp" />
   </LinearLayout>

</android.support.v7.widget.CardView>
